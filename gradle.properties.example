# Project-wide Gradle settings.
# Copy this file to 'gradle.properties' and fill in your values

# JVM arguments
org.gradle.jvmargs=-Xmx2048m -Dfile.encoding=UTF-8

# AndroidX
android.useAndroidX=true
kotlin.code.style=official
android.nonTransitiveRClass=true

# Performance optimizations
org.gradle.parallel=true
org.gradle.caching=true
org.gradle.configureondemand=true

# Release signing configuration (ONLY for maintainers publishing to Play Store)
# Contributors: You don't need these - debug builds work without signing config
# Uncomment and fill these ONLY if you need to create release builds:
# RELEASE_KEYSTORE_PATH=path/to/your/release.keystore
# RELEASE_STORE_PASSWORD=your_keystore_password
# RELEASE_KEY_ALIAS=your_key_alias
# RELEASE_KEY_PASSWORD=your_key_password

